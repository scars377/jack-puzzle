.puzzle
  width 680px
  margin auto

  .input, .board, .sample
    margin 20px

  .board
    position relative
    width 300px
    height 300px

  .grid
    position absolute
    width 100px
    height 100px
    background #eee
    border 1px solid #222
    box-sizing border-box
    transition transform .2s ease-in-out
    overflow hidden

  .img
    position absolute
    width 300px
    height 300px
    background center center no-repeat
    background-size cover

  .sample, .board
    position relative
    display inline-block

  .step
    font-size 30px
    text-align right
    margin-top 5px

  .step .value
    color rgba(40, 212, 40, 1)

  .step.unfamiliar .value
    color rgba(236, 20, 20, 1)

  .step.unfamiliar .note
    font-size 16px
    margin 0
    color rgba(177, 168, 168, .7)
